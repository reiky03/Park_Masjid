<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lapisan untuk Background Asli Toolbar -->
    <item>
        <shape android:shape="rectangle">
            <!-- Ganti dengan warna background Toolbar yang kamu inginkan -->
            <!-- atau biarkan transparan jika Toolbar sudah punya warna dari tema -->
            <solid android:color="@color/white" /> <!-- Contoh: menggunakan warna primer dari tema -->
        </shape>
    </item>

    <!-- Lapisan untuk Garis Pinggir (Stroke) HANYA di bagian BAWAH -->
    <item
        android:top="-2dp"
        android:left="-2dp"
        android:right="-2dp">
        <!-- android:bottom="0dp" tidak perlu di-set negatif karena kita mau stroke bawah terlihat -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Warna solid tidak penting di sini -->
            <stroke
                android:width="1dp"
            android:color="@color/hijau" />
        </shape>
    </item>

</layer-list>