<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bingkai_card"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TitleParkir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_warna"
            android:drawableStart="@drawable/outline_edit"
            android:drawablePadding="8dp"
            android:fontFamily="@font/comic_neue_bold"
            android:drawableTint="@color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="Edit Data Kapasitas Ruang Parkir"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <!--       Bagian kolom Parkir Motor    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic_neue_bold"
                    android:text="Parkir Motor "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/kolom_parkir_motor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:background="@drawable/bingkai_card"
                    android:inputType="number"
                    android:fontFamily="@font/comic_neue_bold"
                    android:textSize="22sp"
                    android:padding="5dp" />

            </LinearLayout>

            <!--       Bagian kolom Parkir Mobil    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic_neue_bold"
                    android:text="Parkir Mobil "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/kolom_parkir_mobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="13dp"
                    android:background="@drawable/bingkai_card"
                    android:inputType="number"
                    android:fontFamily="@font/comic_neue_bold"
                    android:textSize="23sp"
                    android:padding="5dp" />

            </LinearLayout>

            <!--       Button aksi     -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/hijau"
                    android:text="Tidak"
                    android:fontFamily="@font/comic_neue_bold"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/hijau"
                    android:text="Iya"
                    android:fontFamily="@font/comic_neue_bold"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    app:cornerRadius="20dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>