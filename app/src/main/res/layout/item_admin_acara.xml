<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="1dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/hijau">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Judul -->
        <TextView
            android:id="@+id/tvNamaAcaraAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Acara"
            android:fontFamily="@font/comic_neue_bold"
            android:textStyle="bold"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:backgroundTint="@color/hijau"
            android:layout_marginTop="5dp" />


        <!-- Deskripsi -->
        <TextView
            android:id="@+id/tvDeskripsiAcaraAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comic_neue_bold"
            android:text="Deskripsi kegiatan..."
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:maxLines="4"
            android:ellipsize="end" />

        <!-- Baris waktu (tanggal • jam) & btn hapus & btn edit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <!-- Baris waktu (tanggal • jam) -->
            <LinearLayout
                android:id="@+id/rowWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <!-- (Opsional) ikon kalender -->
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="6dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/outline_calendar" />

                <TextView
                    android:id="@+id/tvWaktuAcaraAdmin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/amaranth"
                    android:text="Selasa, 19 Agu 2025 • 17:00 WIB"
                    android:textSize="13sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <!-- Aksi kanan (hapus / edit) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="1dp">

                <ImageButton
                    android:id="@+id/btnHapus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_delete"
                    android:layout_marginEnd="5dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Hapus" />

                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
